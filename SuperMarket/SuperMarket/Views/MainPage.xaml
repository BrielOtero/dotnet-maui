<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:SuperMarket.Model"
             x:Class="SuperMarket.Views.MainPage">
    <CollectionView>
        
        <CollectionView.ItemsSource>
            
            <x:Array Type="{x:Type model:Product}">
                <model:Product
                    Name="Tomate"
                    Id='1'/>
                <model:Product
                    Name="Patata"
                    Id='2'/>
            </x:Array>

        </CollectionView.ItemsSource
        
        <CollectionView.ItemTemplate>
            
        <DataTemplate x:DataType="model:Product">
            <HorizontalStackLayout Padding="10">

                <VerticalStackLayout Padding="10" Spacing="4" VerticalOptions="Center">
                    <Label Text="{Binding Name}" FontSize="24"/>
                    <Label Text="{Binding Id}" FontSize="12"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </DataTemplate>
            
        </CollectionView.ItemTemplate>
            
    </CollectionView>
        
</ContentPage>
